@model User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!--page header start here-->
<div class="mg-page-header-section5 mg-page-header-style">
    <div class="mg-page-header-inner">
        <div class="container">
            <div class="mg-page-header-text">
                <div class="mg-page-header-heading">
                    <h3>Login/Register</h3>
                </div>
                <div class="mg-breadcrumb">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a class="text-decoration-none" href="index.html">Home</a></li>
                            <li class="breadcrumb-item active">Login/Register</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!--page header end here-->
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    if (ViewBag.LoginStatus != null && ViewBag.LoginStatus == 0)
    {
        <div style="background-color: #ff0000; color: white">
            <p>
                Invalid username or password, please try it again
            </p>
        </div>
    }
    <div class="mg-login-reg-section">
        <div class="container">
            <div class="row">
                <div style="margin-left: 25%" class="col-lg-6 col-md-6 col-sm-12">
                    <div class="mg-login-form mg-login-form-js">
                        <div class="mg-login-form-heading">
                            <span>Login</span>
                            <p>
                                
                            </p>
                        </div>
                        <form>
                            <div class="mg-form-main">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="mg-form-input-field">
                                            @Html.TextBoxFor(m => m.UserEmail, new {@placeholder = "Enter Useremail"})
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="mg-form-input-field">
                                            @Html.TextBoxFor(m => m.UserPassword, new {@placeholder = "Enter Password"})
                                            <div class="mg-forget-password"><a href="javascript:void(0);">Forgot?</a></div>
                                        </div>
                                    </div>
                                    <div class="mg-check-box">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="mg-check-box">
                                            <label class="form-check-label" for="mg-check-box">
                                                Remember me
                                            </label>
                                        </div>
                                    </div>
                                    <div class="mg-form-submit-btn">
                                        <button style="background-color: #fff; color: black; margin-left: 40%" class="btn">LOGIN</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



@model User
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!--page header start here-->
<div class="mg-page-header-section5 mg-page-header-style">
    <div class="mg-page-header-inner">
        <div class="container">
            <div class="mg-page-header-text">
                <div class="mg-page-header-heading">
                    <h3>Login/Register</h3>
                </div>
                <div class="mg-breadcrumb">
                    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a class="text-decoration-none" href="index.html">Home</a></li>
                            <li class="breadcrumb-item active">Login/Register</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!--page header end here-->
@using (Html.BeginForm())
{
    <div class="mg-login-reg-section">
        <div class="container">
            <div class="row">
                <div style="margin-left: 25%" class="col-lg-6 col-md-6 col-sm-12">
                    <div class="mg-account-details-form">
                        <div class="mg-register-form-heading">
                            <span>Register</span>
                            <p>

                            </p>
                        </div>
                        <form asp-action="SignUp">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mg-form-main">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="mg-form-input-field">
                                            @*@Html.TextBoxFor(m => m.UserName, new {@placeholder = "Enter UserName"})*@
                                             <label asp-for="UserName" class="control-label"></label>
                                            <input asp-for="UserName" class="form-control" />
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="mg-form-input-field">
                                            @*@Html.TextBoxFor(m => m.UserEmail, new {@placeholder = "Enter UserEmail"})*@
                                            <label asp-for="UserEmail" class="control-label"></label>
                                            <input asp-for="UserEmail" class="form-control" />
                                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="mg-form-input-field">
                                            @*@Html.TextBoxFor(m => m.UserPassword, new {@placeholder = "Enter UserPassword"})*@
                                            <label asp-for="UserPassword" class="control-label"></label>
                                            <input asp-for="UserPassword" class="form-control" />
                                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                        <div class="mg-form-input-field">
                                            @*@Html.TextBoxFor(m => m.UserRole, new {@placeholder = "Enter UserRole"})*@
                                            <label asp-for="UserRole" class="control-label"></label>
                                            <input asp-for="UserRole" class="form-control" />
                                            <span asp-validation-for="UserRole" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div>
                                        <p>

                                        </p>
                                    </div>
                                    <div class="mg-form-submit-btn">
                                        @*<button style="margin-left: 35%" class="btn">REGISTER</button>*@
                                        <input style="margin-left: 40%" type="submit" value="Register" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


